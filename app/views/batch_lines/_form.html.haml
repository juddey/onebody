= form_for @batch_line do |f|
  - if @batch_line.errors.any?
    #error_explanation
      %h2= "#{pluralize(@batch_line.errors.count, "error")} prohibited this batch_line from being saved:"
      %ul
        - @batch_line.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :tender
    = f.text_field :tender
  .field
    = f.label :fund
    = f.text_field :fund
  .actions
    = f.submit 'Save'
